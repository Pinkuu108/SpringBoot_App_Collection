package Pattern;

import java.util.Scanner;

public class Reverse_FullTringle {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int n = sc.nextInt();

		/*
		 * for (int i = n; i >= 1; i--) {
		 * 
		 * // Print leading spaces for (int j = 0; j < n - i; j++) {
		 * System.out.print(" "); }
		 * 
		 * // Print stars for (int k = 1; k <= (2 * i - 1); k++) {
		 * System.out.print("*"); }
		 * 
		 * // Move to next line System.out.println(); }
		 */
        
        for(int i=0;i<n;i++)
        {
        	for(int j=0;j<i;j++)
        	{
        		System.out.print(" ");
        	}
        	for(int k=0;k<2n-(2*i+1);k++)
        	{
        		
        	}
        }
    }
}
