package Daily_Practice_Coding;

import java.util.concurrent.TimeUnit;
import java.util.concurrent.locks.Lock;
import java.util.concurrent.locks.ReentrantLock;

class Account {

	private int balance = 1000;
	private final Lock lock = new ReentrantLock();

	public  void withdraw(int amount) {
		System.out.println(Thread.currentThread().getName() + "Is Attempting to withdraw..");

		try {
			if (lock.tryLock(1000, TimeUnit.MILLISECONDS)) {
				if (balance >= amount) {
					try {
						System.out.println(Thread.currentThread().getName() + "Processing  The withdraw....");
						Thread.sleep(3000);
						balance -= amount;
						System.out.println(Thread.currentThread().getName()
								+ "Withdraw sucessfull,Available Balance... " + balance);

					} catch (Exception e) {

					} finally {
						lock.unlock();
					}

				} else {
					System.out.println(Thread.currentThread().getName() + "Insufficeant Balance....");
				}

			} else {
				System.out.println(Thread.currentThread().getName() + "Visit after again");

			}

		} catch (Exception e) {

		}

	}
}

public class Synchronised_Lock {

	public static void main(String[] args) {
		Account a = new Account();
		Runnable r = new Runnable() {

			@Override
			public void run() {
				a.withdraw(100);

			}
		};
		Thread t1 = new Thread(r, "Thread 1 ");
		Thread t2 = new Thread(r, "Thread 2 ");
		t1.start();
		t2.start();

	}
}
